function eto_student_schema() {
  $schema['eto_student_profile'] = array
    (
     'description' => 'Profile of a student',
     'fields' => array (
			'nid' => array
			(
			 'type' => 'int',
			 'unsigned' => TRUE,
			 'not null' => TRUE,
			 'default' => 0,
			 ),
			'vid' => array
			(
			 'type' => 'int',
			 'unsigned' => TRUE,
			 'not null' => TRUE,
			 'default' => 0,
			 ),
			'uid' => array
			(
			 'type' => 'int',
			 'unsigned' => TRUE,
			 'not null' => TRUE,
			 'default' => 0,
			 ),
			'first_name' => array
			(
			 'type' => 'varchar',
			 'length' => 255,
			 ),
			'last_name' => array
			(
			 'type' => 'varchar',
			 'length' => 255,
			 ),
			'first_name_parent' => array
			(
			 'type' => 'varchar',
			 'length' => 255,
			 ),
			'last_name_parent' => array
			(
			 'type' => 'varchar',
			 'length' => 255,
			 ),
			'email_parent' => array
			(
			 'type' => 'varchar',
			 'length' => 1024,
			 ),
			'birthdate' => array
			(
			 'type' => 'int',
			 'unsigned' => TRUE,
			 ),
			'grade' => array
			(
			 'type' => 'varchar',
			 'length' => 255,
			 ),
			)
     );


}
     